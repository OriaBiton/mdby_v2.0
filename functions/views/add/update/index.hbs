<div id="load" data-title="העלאת עדכון" data-firebase-auth="" data-firebase-storage="" data-firebase-functions=""></div>

  <h1>כניסה</h1>
  <form>

    <div class="field">
      <label for="email">דואר אלקטרוני</label>
      <input type="email" id="email" name="email" required="" placeholder="הזינו את כתובת הדוא&quot;ל שלכם">
    </div>
    <div class="field">
      <label for="pass">סיסמה</label>
      <input type="password" id="pass" name="pass" required="" placeholder="הזינו את הסיסמה שלכם">
      <p class="m-0">
        <small id="forgot-pass" class="pointer">שכחתי סיסמה</small>
      </p>
    </div>
    <div class="middle">
      <button type="submit">כניסה</button>
    </div>
    <button id="not-member" class="small-btn">אין לי משתמש</button>
  </form>


  <h1>העלאת עדכון</h1>
  <div>
    <label for="file">קובץ</label>
    <input type="file" id="file" accept="image/*" required="">
  </div>
  <div>
    <label for="category">סוג עדכון:</label>
    <select id="category">
      <option value="general" selected="">כללי</option>
      <option value="kashrut">כשרות</option>
    </select>
  </div>
  <div>
    <label for="title">כותרת</label>
    <input type="text" id="title" required="">
  </div>
  <div>
    <label for="desc">פירוט</label>
    <textarea id="desc" required=""></textarea>
  </div>
  <div>
    <label for="password">סיסמה</label>
    <input type="password" id="password" required="">
  </div>
  <button>העלה</button>

